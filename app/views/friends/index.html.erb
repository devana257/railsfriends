<% if user_signed_in? %>
<h1>All Friends</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
    
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %>
    </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
      
        <% if friend.user == current_user %>
       <!--    <td><%= link_to 'Edit', edit_friend_path(friend) %></td> -->
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
          <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:'btn btn-primary' %>
<% else %>
<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% end %>